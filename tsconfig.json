{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "paths": {
      "@app": ["app"],
      "@config": ["config"],
      "@logger": ["utils/logger"],
      "@controllers/*": ["controllers/*"],
      "@ctypes/*": ["types/*"],
      "@entities/*": ["entities/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@validations/*": ["validations/*"]
    }
  }
}
